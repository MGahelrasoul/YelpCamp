<%- include("../partials/header") %>

<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome To <span>YelpC<img src="imgs/icon.png">mp!</span></h1>
        <p class="lead">Browse our user-picked campgrounds from all over the world.</p>
        <p>
            <form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Campground search..." class="form-control">
                    <button type="submit" class="form-control btn btn-primary">
                        <img src="imgs/search.png">
                    </button>
                </div>
            </form>
        </p>
        <p>
            <a class="btn btn-primary btn-lg my-2" href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
</section>

<!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> -->


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-4 col-sm-6">
                    <div class="card mb-4 shadow-sm" style="border: 0;">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-light full-card-look">
                            <img class="card-img-top push-card" src="<%= campground.image %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                        <%= campground.name %>
                                </h5>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>